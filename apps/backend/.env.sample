EXECUTASK_PRIMARY.ENV="local"

EXECUTASK_SERVER.PORT="8080"
EXECUTASK_SERVER.READ_TIMEOUT="30"
EXECUTASK_SERVER.WRITE_TIMEOUT="30"
EXECUTASK_SERVER.IDLE_TIMEOUT="60"
EXECUTASK_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

EXECUTASK_DATABASE.HOST="localhost"
EXECUTASK_DATABASE.PORT="5432"
EXECUTASK_DATABASE.USER="postgres"
EXECUTASK_DATABASE.PASSWORD=""
EXECUTASK_DATABASE.NAME="executask"
EXECUTASK_DATABASE.SSL_MODE="disable"
EXECUTASK_DATABASE.MAX_OPEN_CONNS="25"
EXECUTASK_DATABASE.MAX_IDLE_CONNS="25"
EXECUTASK_DATABASE.CONN_MAX_LIFETIME="300"
EXECUTASK_DATABASE.CONN_MAX_IDLE_TIME="300"

EXECUTASK_AUTH.SECRET_KEY="secret"

EXECUTASK_INTEGRATION.RESEND_API_KEY="resend_key"

EXECUTASK_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
EXECUTASK_OBSERVABILITY.SERVICE_NAME="executask"
EXECUTASK_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
EXECUTASK_OBSERVABILITY.LOGGING.LEVEL="debug"
EXECUTASK_OBSERVABILITY.LOGGING.FORMAT="console"
EXECUTASK_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
EXECUTASK_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
EXECUTASK_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
EXECUTASK_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
EXECUTASK_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
EXECUTASK_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
EXECUTASK_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
EXECUTASK_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
EXECUTASK_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"